@using Microsoft.AspNetCore.Http

@model DojodachiPet;


<h1 class="display-4 text-center p-2">Dojodachi</h1>

<div style="margin: 0 auto; width: 650px;" class="d-flex justify-content-between align-items-center">
    <h5>Fullness: <strong>@Model.Fullness</strong></h5>
    <h5>Happiness: <strong>@Model.Happiness</strong></h5>
    <h5>Meals: <strong>@Model.Meals</strong></h5>
    <h5>Energy: <strong>@Model.Energy</strong></h5>
</div>
@{
    if (@Context.Session.GetString("Message") == "You Win!")
    {
        <div class="d-flex flex-column justify-content-around align-items-center"
        style="margin: 0 auto; height: 600px; width: 750px; border: 2px solid black">
            <h5 class="text-center">@Context.Session.GetString("Message")</h5>
        </div>
        <div style="margin: 0 auto; width: 850px;" class="d-flex justify-content-center align-items-center">
            <a class="btn btn-success mx-5 my-3" href="/">Restart</a>
        </div>
    } else if (@Context.Session.GetString("Message") == "You killed your Dojodachi!")
    {
        <div class="d-flex flex-column justify-content-around align-items-center"
        style="margin: 0 auto; height: 600px; width: 750px; border: 2px solid black">
            <h5 class="text-center">@Context.Session.GetString("Message")</h5>
        </div>
        <div style="margin: 0 auto; width: 850px;" class="d-flex justify-content-center align-items-center">
            <a class="btn btn-danger mx-5 my-3" href="/">Restart</a>
        </div>

    } else
    {
        <div class="d-flex flex-column justify-content-around align-items-center"
        style="margin: 0 auto; height: 600px; width: 750px; border: 2px solid black">
            <h5 class="text-center">@Context.Session.GetString("Message")</h5>
        </div>
        <div style="margin: 0 auto; width: 850px;" class="d-flex justify-content-center align-items-center">
            <a class="btn btn-info mx-5 my-3" href="feed">Feed</a>
            <a class="btn btn-info mx-5 my-3" href="play">Play</a>
            <a class="btn btn-info mx-5 my-3" href="work">Work</a>
            <a class="btn btn-info mx-5 my-3" href="sleep">Sleep</a>
        </div>
    }
}
